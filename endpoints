---------
GraphQL api design

--
/graphQl

query{
   events{
        events(id){}
   }
   visitors{
        visitor(id){}
   }
   organizers{
        organizer(id){}
   }
   visitors_events{
        visitor_event(id){}
   }

   event(id){
        _id
        name
        date
        location
        organizers{}
        visitors{}
   }
   visitor(id){
        _id
        name
        events{}
   }
   organizer(id){
        _id
        name
        events{}
   }
   visitor_event(id){
        _id
        visitor_id
        event_id
        visitor{}
        event{}
   }
}
